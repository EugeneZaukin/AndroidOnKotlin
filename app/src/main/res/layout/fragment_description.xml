<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DescriptionFragment">

    <TextView
        android:id="@+id/title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textSize="@dimen/recycler_text_size"
        android:textStyle="italic"
        android:layout_margin="@dimen/margin_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_description"
        android:layout_width="@dimen/recycler_image_size"
        android:layout_height="@dimen/recycler_image_size"
        android:layout_marginStart="@dimen/margin_all"
        android:layout_marginTop="@dimen/margin_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_description"
        tools:srcCompat="@android:drawable/ic_menu_crop" />

    <TextView
        android:id="@+id/text_view_any_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/any_information"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_description"
        app:layout_constraintTop_toBottomOf="@+id/title_description" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_description">

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginTop="@dimen/margin_all"
            android:layout_marginEnd="@dimen/margin_start_end"
            android:text="@string/description"
            android:textSize="@dimen/recycler_text_size" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>